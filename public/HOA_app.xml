        }
      } else {
        if (this.status === 'broadcasting') {
          this.status = 'finished';
        }
      }
      if (prev_status !== this.status) {
        return this.notify();
      }
    };

    Hangout.prototype.notify = function() {
      return $('#main').append("<p>change status: " + this.status + "</p>");
    };

